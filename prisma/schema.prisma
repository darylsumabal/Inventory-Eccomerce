generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id        String  @id @default(cuid())
  productName    String
  price   Float
  stock Int
  rating  Int
  category String
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Users{
    id String @id @default(cuid())
    first_name String 
    last_name String
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}